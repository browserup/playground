<div class="container-fluid">
  <h1 class="mb-4">Toy Details</h1>
  <%= form_with(model: @toy, local: true) do |form| %>
      <div class="form-group">
        <%= form.label :name %>
        <%= form.text_field :name, id: :name, class:"form-control", readonly: true %>
      </div>
      <div class="form-group">
        <%= form.label :description %>
        <%= form.text_area :description, id: :description, class:"form-control", readonly: true %>
      </div>
  <% end -%>
  <%= link_to 'Edit', edit_toy_path(@toy),class:"btn btn-primary min-width-btn" %>
  <%= link_to 'Back', toys_path,class:"btn btn-link min-width-btn" %>
</div>
